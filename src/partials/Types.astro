---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import Container from '../shared/ui/Container.astro';
import Section from '../shared/ui/Section.astro';
import ButtonLink from 'src/shared/ui/ButtonLink.astro';
import { Image } from 'astro:assets';


const collectionData = await getCollection('paraisiteTypes'); // change collection name
const collection: CollectionEntry<'paraisiteTypes'>['data'] = collectionData[0].data;

---

<Section>
	<Container className='flex flex-col gap-8 md:gap-12 lg:gap-16'>
		<h2 class="text-4xl text-left w-full md:w-3/4 self-start">{collection.titel}</h2>
		<div class='grid w-full grid-cols-12 gap-4 md:gap-8 lg:gap-12'>
			{
				collection.parasites.map(item => (
					<div class='border shadow-xl border-accent rounded-2xl flex flex-col gap- p-2 md:p-6 lg:p-4 col-span-6  md:col-span-4 lg:col-span-3'>
						<div class="flex flex-col aspect-square justify-between">
							<h3 class="text-xl">{item.title}</h3>
							<Image
								height={'200'}
								width={'200'}
								src={item.img}
								class={'object-scale-down self-end'}
								alt={''}
							/>
						</div>
					</div>
				))
			}
		</div>
		<ButtonLink
			href={collection.buttonLink}
			title={collection.buttonLable}
		/>
	</Container>
</Section>