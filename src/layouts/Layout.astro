---
import '../styles.css';
import Header from '../widgets/Header.astro'

export interface Props {
	title: string;
	phone?: string;
	description?: string;
	icon?: string;
	keywords?: string[]
}

const { title, phone, description, icon, keywords }: Props = Astro.props;
---

<!doctype html>
<html lang='ru'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content={description}
		/>
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<meta 
			name="keywords"
			content={keywords?.join(', ')}
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href={icon}
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{title}</title>
	</head>
	<body
		class='h-full overflow-x-hidden text-base text-primary-text bg-primary-bg '>
		<Header phone={phone}/>

		<slot />
	</body>
</html>

<style>
	body {
		font-family: 'Manrope', sans-serif;
	}
</style>