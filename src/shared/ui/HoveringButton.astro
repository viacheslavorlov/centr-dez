---
import { PhoneCall } from 'lucide-preact';

const { tel, url, className } = Astro.props;
---

<>
	<a
		class={`lg:hidden right-4 bottom-4 md:right-8 lg:right-12 md:bottom-8 lg:bottom-12 fixed element drop-shadow-md px-3 py-3
   cursor-pointer rounded-full border active:border-transparent hover:underline text-white border-transparent  hover:border-accent p-0 text-center z-50 font-extrabold uppercase bg-accent-secondary ${className}`}
		href={'tel:' + tel}>
		<PhoneCall
			client:load
			size={40}
			class={'w-10 h-10 md:w-14 md:h-14'}
		/>
	</a>

	<a
		class={`hidden lg:block fixed right-4 bottom-4 md:right-8 lg:right-12 md:bottom-8 lg:bottom-12 element drop-shadow-md px-3 py-3
   cursor-pointer rounded-full border active:border-transparent hover:underline text-white border-transparent  hover:border-accent p-0 text-center z-50 font-extrabold uppercase bg-accent-secondary ${className}`}
		href={'/form'}>
		<PhoneCall
			client:load
			size={40}
			class={'w-10 h-10 md:w-14 md:h-14'}
		/>
	</a>
</>


<style>
	@keyframes shake {
		0% {
			transform: translateX(0);
		}
		3% {
			transform: translateX(-10px) rotate(-5deg);
		}
		5% {
			transform: translateX(10px) rotate(5deg);
		}
		7% {
			transform: translateX(-10px) rotate(-5deg);
		}
		9% {
			transform: translateX(10px) rotate(5deg);
		}
		11% {
			transform: translateX(-10px) rotate(-5deg);
		}
		13% {
			transform: translateX(10px) rotate(5deg);
		}
		15% {
			transform: translateX(-10px) rotate(-5deg);
		}
		17% {
			transform: translateX(10px) rotate(5deg);
		}
		19% {
			transform: translateX(-10px) rotate(-5deg);
		}
		21% {
			transform: translateX(0) rotate(0);
		}
		100% {
			transform: translateX(0) rotate(0);
		}
	}
	@keyframes slide {
		0% {
			left: -100%;
		}
		3% {
			left: 100%;
		}
		4% {
			left: 1000%;
		}
		100% {
			left: 1000%;
		}
	}

	.element {
		overflow: hidden;
		animation: shake 7s linear 1s infinite;
		font-family: Akrobat, Arial, Helvetica, sans-serif;
		/* position: relative; */
	}

	.element::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 30%;
		height: 100%;
		background-color: var(--color-secondary);
		animation: slide 8s linear infinite;
	}
</style>
