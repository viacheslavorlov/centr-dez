---
import { clsx } from 'clsx';

type Props = { href: string; title: string; className?: string };

const { href, title, className }: Props = Astro.props;
---

<a
	href={href}
	class={clsx(
		'button relative bg-accent text-center px-4 py-2 min-w-80 rounded-full text-white font-semibold hover:bg-accent-secondary',
		className
	)}>
	<button class="text-center">{title}</button>
</a>
<style>
	@keyframes slide {
		0% {
			opacity: 1;
			bottom: -100%;
			left: -10%;
			width: 10%;
			height: 201%;
		}
		15% {
			opacity: 0.9;
			left: -30%;
			bottom: -180%;
			width: 100%;
			height: 350%;
		}
		30% {
			opacity: 0.8;
			left: -50%;
			bottom: -200%;
			width: 400%;
			height: 400%;
		}
		40% {
			opacity: 0;
			width: 500%;
			height: 400%;
		}
		100% {
			opacity: 0;
		}
	}

	.button {
		overflow: hidden;
		position: relative;
		transition: all 200ms;
	}

	.button::before {
		content: '';
		position: absolute;
		bottom: -50%;
		left: -10%;
		width: 30%;
		height: 200%;
		background: linear-gradient(60deg, transparent, #fafafa);
		animation: slide 4s linear infinite;
		border-radius: 50%;
	}
