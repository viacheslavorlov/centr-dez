---
import { X } from 'lucide-preact';
import { isModal } from '../../store';

// Component State
const modalOpen = isModal.get();

// Functions to open and close the modal
const openModal = () => isModal.set(true);
const closeModal = () => isModal.set(false);
---

<!-- Modal Structure -->
<div class='modal'>
	<!-- Trigger Button -->
	<button class='modal-close'><X /></button>

	<!-- Modal Content -->
	<div
		
		style={{ display: modalOpen ? 'block' : 'none' }}>
		<div class='modal-content'>
			<slot />
		</div>
	</div>
</div>

<!-- Styles -->
<style>
	.modal {
		display: none;
		position: fixed;
		z-index: 1;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		overflow: auto;
		background-color: rgb(0, 0, 0);
		background-color: rgba(0, 0, 0, 0.4);
	}

	.modal-content {
		background-color: #fefefe;
		margin: 15% auto;
		padding: 20px;
		border: 1px solid #888;
		width: 80%;
	}

	.close {
		color: #aaa;
		float: right;
		font-size: 28px;
		font-weight: bold;
	}

	.close:hover,
	.close:focus {
		color: black;
		text-decoration: none;
		cursor: pointer;
	}
</style>
